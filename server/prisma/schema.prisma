generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PROD_DATABASE_URL")
  // url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  finances Finances[]
}

model Finances {
  id            String        @id @default(cuid())
  userId        String
  description   String        @db.Text()
  amount        Float
  category      Category
  paymentMethod PaymentMethod
  type          ExpenseType   @default(EXPENSE)
  recurring     Boolean       @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

enum Category {
  FOOD
  TRAVEL
  ENTERTAINMENT
  BILLS
  SHOPPING
  MEDICAL
  EDUCATION
  INSURANCE
  TAXES
  CHARITY
  BUSINESS
  INVESTMENT
  OTHER
}

enum ExpenseType {
  INCOME
  EXPENSE
  INVESTMENT
  SAVINGS
  LOAN
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  OTHER
}
